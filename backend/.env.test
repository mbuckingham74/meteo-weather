# Test Environment Configuration
# This file is loaded by jest.setup.js when running tests locally

# Database (connect to Docker MySQL from host machine)
DB_HOST=localhost
DB_PORT=3307
DB_USER=root
DB_PASSWORD=meteo_root_pass
DB_NAME=meteo_app

# API Keys (use test keys or real keys for integration tests)
VISUAL_CROSSING_API_KEY=test-api-key
OPENWEATHER_API_KEY=test-api-key
METEO_ANTHROPIC_API_KEY=test-api-key

# JWT Secrets (test secrets - must be at least 32 characters)
JWT_SECRET=test_jwt_secret_for_development_32ch
JWT_REFRESH_SECRET=test_jwt_refresh_secret_for_dev_32

# Server
PORT=5001
NODE_ENV=test

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
