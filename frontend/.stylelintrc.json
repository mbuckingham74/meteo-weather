{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["theme", "tailwind", "apply", "layer", "config", "import"]
      }
    ],
    "selector-class-pattern": [
      "^(?:(?:o|c|u|t|s|is|has)-)?[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*(?:__[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:--[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?$",
      {
        "message": "Selector should follow BEM naming convention"
      }
    ],
    "custom-property-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
    "keyframes-name-pattern": "^[a-z]([a-z0-9-]+)?$",
    "no-descending-specificity": true,
    "font-family-no-missing-generic-family-keyword": true,
    "property-no-deprecated": true,
    "comment-empty-line-before": "always",
    "rule-empty-line-before": "always",
    "value-keyword-case": "lower",
    "color-hex-length": "short",
    "custom-property-empty-line-before": "always",
    "color-function-notation": "modern",
    "alpha-value-notation": "number",
    "declaration-block-no-redundant-longhand-properties": true,
    "shorthand-property-no-redundant-values": true,
    "property-no-vendor-prefix": true,
    "no-duplicate-selectors": true
  },
  "ignoreFiles": ["node_modules/**", "build/**", "dist/**", "**/*.min.css"]
}
