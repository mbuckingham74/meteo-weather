# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
# Use 'mysql' as DB_HOST when running in Docker, 'localhost' for local development
DB_HOST=mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=meteo_app

# API Keys
# Visual Crossing Weather API (Timeline 10 year): https://www.visualcrossing.com/weather-api
# Get your free API key at: https://www.visualcrossing.com/weather-api
VISUAL_CROSSING_API_KEY=your_visual_crossing_key_here

# Anthropic Claude API for AI-powered location finder
# Get your API key at: https://console.anthropic.com/
# Note: We use METEO_ANTHROPIC_API_KEY (not ANTHROPIC_API_KEY) to avoid conflicts
# with Claude Code CLI, which uses ANTHROPIC_API_KEY for its own operations.
METEO_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# JWT Authentication
JWT_SECRET=replace_me_with_strong_secret
JWT_REFRESH_SECRET=replace_me_with_stronger_secret
# Optional: customise expiration windows
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
